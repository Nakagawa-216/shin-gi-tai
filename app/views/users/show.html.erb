<div>
	<%= attachment_image_tag @user, :icon_image, :fill, 100, 100, format: 'jpeg', fallback: "no_icon_image.jpeg", size:'100x100' %>
	<%= @user.name %>
	<div class="follow-btn">
		<% if current_user == @user %>
			<%= link_to "登録情報編集", edit_user_path(current_user.id) %>
		<% else %>
			<% if current_user.following?(@user) %>
				<%= form_with model: @relationship, url: relationship_path, method: :delete, local: true do |f| %>
					<%= f.hidden_field :follow_id, value: @user.id %>
					<%= f.submit "フォロー解除" %>
				<% end %>
			<% else %>
				<%= form_with model: @relationship, url: relationships_path, method: :post, local: true do |f| %>
					<%= f.hidden_field :follow_id, value: @user.id %>
					<%= f.submit "フォローする" %>
				<% end %>
			<% end %>
		<% end %>
	</div>

	<div class="follow">
		<%= link_to following_user_path(@user.id) do %>
			フォロー<%= @user.followings.count %>人
		<% end %>
	</div>
	<div class="follower">
		<%= link_to followers_user_path(@user.id) do %>
			フォロー<%= @user.followers.count %>人
		<% end %>
	</div>
</div>

<div>
	<%= column_chart ActivityPoint.group("strftime('%Y-%m-%d', created_at)").sum(:activity_point) %>
	<%= pie_chart ActivityPoint.group(:category_id).sum(:activity_point) %>
</div>

<div>
	<h2>Side Bar</h2>
	<%= link_to user_path(current_user.id) do %>
		<%= attachment_image_tag @user, :icon_image, :fill, 100, 100, format: 'jpeg', fallback: "no_icon_image", size:"100x100" %></br>
	<% end %>
	<%= current_user.name %></br>
	10フォロー
	10フォロワー</br>
	<%= @user.posts.count %> posts</br>
	200 likes</br>

	アクティビティポイント</br>
	200 Points
</div>

<div>
	<% @posts.each do |post| %>
		<%= link_to post_path(post) do %>
			<%= attachment_image_tag post.user, :icon_image_id, :fill, 50, 50, format: 'jpeg', fallback: "no_icon_image.jpeg", size:'50x50' %>
			<%= post.user.name %>
			<%= post.created_at %></br>
			<%= attachment_image_tag post, :image_id, :fill, 180, 125, format: 'jpeg', fallback: "no_image.png", size:"180x125" %>
			<%= post.body %></br>
		<% end %>
	<% end %>
</div>