<div class="container">
<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <h2 class="mb-3">ログイン</h2>
  <div class="col-8 mx-auto">
    <div class="row mb-3">
      <div class="col-4"><%= f.label :email, :メールアドレス %></div>
      <div class="col-8"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50" %></div>
    </div>
    <div class="row mb-3">
      <div class="col-4"><%= f.label :password, :パスワード %></div>
      <div class="col-8"><%= f.password_field :password, autocomplete: "current-password", size: "50" %></div>
    </div>
    <div class="col-3 mx-auto">
      <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
</div>