<%= attachment_image_tag @post.user, :icon_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_icon_image", size:"100x100" %>
<%= @post.user.name %>
<%= @post.category.name %>
<%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></br>
<%= attachment_image_tag @post, :image %>
<%= @post.body %>
<% if @post.favorited_by?(current_user) %>
	<%= link_to favorite_path(post_id: @post.id), method: :delete do %>
		♥<%= @post.favorites.count %>いいね
	<% end %>
<% else %>
	<%= link_to favorites_path(post_id: @post.id), method: :post do %>
		♡<%= @post.favorites.count %>いいね
	<% end %>
<% end %>