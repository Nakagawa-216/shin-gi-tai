<h1>編集画面</h1>
<%= form_with model:@post, local: true do |f| %>
	<div>
		<%= f.radio_button :category_id, 1, checked: "checked" %>
		<%= f.label :瞑想 %>
		<%= f.radio_button :category_id, 2 %>
		<%= f.label :ストレッチ %>
		<%= f.radio_button :category_id, 3 %>
		<%= f.label :トレーニング %>
	</div>
	<div>
		<%= f.attachment_field :image %>
		<%= attachment_image_tag @post, :image %>
	</div>
	<div>
		<h4>Body</h4>
		<%= f.text_area :body %>
	</div>

	<div>
		<%= f.submit "更新" %>
		<%= link_to "削除", post_path(@post), method: :delete %>
	</div>
<% end %>